<div class="row">
  <div class="col-lg-12">
    <h1>Solar Gardens</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Size</th>
          <th>Address</th>
          <th>City</th>
          <th>Zip</th>
          <th>Operator</th>
          <th>Contact name</th>
          <th>Contact phone</th>
          <th>Contact email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @solar_gardens.each do |solar_garden| %>
          <tr>
            <td><%= solar_garden.size %></td>
            <td><%= solar_garden.address %></td>
            <td><%= solar_garden.city %></td>
            <td><%= solar_garden.zip %></td>
            <td><%= solar_garden.operator %></td>
            <td><%= solar_garden.contact_name %></td>
            <td><%= solar_garden.contact_phone %></td>
            <td><%= solar_garden.contact_email %></td>
            <td><%= link_to 'Show', solar_garden %></td>
            <td><%= link_to 'Edit', edit_solar_garden_path(solar_garden) %></td>
            <td><%= link_to 'Destroy', solar_garden, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Solar garden', new_solar_garden_path %>
  </div>
</div>
